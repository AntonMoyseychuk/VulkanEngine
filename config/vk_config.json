{
    "os": {
        "win32": {
            "build_type": {
                "debug": {
                    "validation_layers": [
                        "VK_LAYER_KHRONOS_validation"
                    ],

                    "extensions": [
                        "VK_EXT_debug_utils",
                        
                        "VK_KHR_surface",
                        "VK_KHR_win32_surface"
                    ],

                    "callback": {
                        "severity": ["warning", "error"],
                        "message_types": ["all"]
                    }
                },

                "release": {
                    "validation_layers": [],
                    "extensions": [
                        "VK_KHR_surface",
                        "VK_KHR_win32_surface"
                    ]
                }
            }
        }
    }
}